# --------------------------------------------------- #
# docker-compose.yaml variables                       #
# convention: Host volume VOL_H_XXX will be mapped    #
# as container's volume VOL_C_YYY                     #
# VOL_H_XXX:VOL_C_YYY                                 #
# --------------------------------------------------- #

# -= MUST BE defined =-
# Host static DB root dir
VOL_H_DB=/opt/afc/databases/rat_transfer

# Container's static DB root dir
VOL_C_DB1=/var/lib/fbrat
VOL_C_DB2=/usr/share/fbrat/rat_transfer

# external IP and port defenitions.
EXT_IP=172.31.11.188

# apach https ports range.(one port from the range will be used by system)
EXT_PORT=80-180

# apach https host ports range.(one port from the range will be used by system)
EXT_PORT_S=443-543

# nginx external (host's) ports range.
# (one port from the range will be used by system)
EXT_MTLS_PORT=544-644

# -= OPTIONAL =-
# if you have tls/mtls configuration
VOL_H_SSL=./ssl
VOL_C_SSL=/etc/httpd/certs
VOL_H_APACH=./apache-conf
VOL_C_APACH=/etc/httpd/conf.d
VOL_H_NGNX=./ssl/nginx
VOL_C_NGNX=/certificates/servers
